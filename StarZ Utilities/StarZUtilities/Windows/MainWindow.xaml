                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.Template>
                                <ControlTemplate TargetType="ListBox">
                                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ListBox.Template>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="MusicItemsBackground" HorizontalAlignment="Center" BorderThickness="0" Background="{StaticResource LightMode2}" CornerRadius="10" Padding="5,5,5,5" Width="710" Margin="0,10,0,10">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Image}" RenderOptions.BitmapScalingMode="HighQuality" Width="100" Height="100" Stretch="Uniform" />
                                            <StackPanel Grid.Column="1" Margin="10">
                                                <TextBlock Text="{Binding Title}" FontFamily="Outfit Thin" FontWeight="Bold" FontSize="16" />
                                                <TextBlock Text="{Binding Artist}" FontFamily="Outfit Thin" FontSize="14" Margin="0,5,0,0" />
                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                    <Image 
                                                    x:Name="PlayButton"
                                                    Panel.ZIndex="3" 
                                                    HorizontalAlignment="Left" 
                                                    Opacity="0.8" 
                                                    Height="30"
                                                    Margin="-5,0,5,0"
                                                    VerticalAlignment="Top" 
                                                    RenderOptions.BitmapScalingMode="HighQuality" 
                                                    Width="30" 
                                                    Source="/Resources/Play.png" 
                                                    Cursor="Hand" 
                                                    MouseLeftButtonDown="PlayButton_Click" 
                                                    RenderTransformOrigin="0.5, 0.5">
                                                        <Image.RenderTransform>
                                                            <ScaleTransform 
                                                            x:Name="ImageTransform8" />
