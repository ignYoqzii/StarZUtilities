            <TabItem x:Name="HomeTabItem" Foreground="AliceBlue" Height="44" Width="44" Margin="28.5,198,-28.5,-198">

                <TabItem.Header>
                    <Image x:Name="HomeTab" Source="/Resources/HomeGray.png" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5" Height="40" Width="40"/>
                </TabItem.Header>

                <Grid Margin="63,0,-2,0" Height="607">

                    <TextBlock x:Name="HomeTextBlock" Text="Home" FontSize="50" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="275,35,426,514"/>

                    <Grid 
                        Height="607"
                        Visibility="Visible"
                        x:Name="HomeMenu" 
                        Opacity="1.0">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HomeMenu"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>

                        <Border x:Name="HomeBackground1" Background="#f6f8fa" CornerRadius="20" Margin="80,160,317,265">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>

                        <Border x:Name="HomeBackground2" Background="#f6f8fa" CornerRadius="20" Margin="80,366,48,97">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>

                        <Border x:Name="HomeBackground3" Background="#f6f8fa" CornerRadius="20" Margin="548,160,48,265">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>

                        <TextBlock x:Name="WelcomeTextBlock" Text="Welcome to StarZ Utilities !" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="97,175,373,390"/>
                        <TextBlock x:Name="DiscordServerTextBlock" Text="Join our Discord server !" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="208,388,287,177"/>
                        <TextBlock x:Name="DiscordServerTextBlock2" Text="To get support or chat with other people from our community." FontSize="18" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="208,427,121,145"/>
                        <TextBlock x:Name="ChangelogTextBlock" Text="Changelog" FontSize="25" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="566,178,141,393"/>
                        <TextBlock x:Name="ChangelogTextBlock2" Text="This is in BETA testing!" FontSize="18" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="566,295,81,282"/>
                        <Image x:Name="DiscordIcon" Source="/Resources/Discord.png" Width="120" Height="120" RenderOptions.BitmapScalingMode="HighQuality" Margin="83,378,636,109"/>
                        <Button Content="Join >" Cursor="Hand" Foreground="White" FontWeight="Medium" FontFamily="Outfit Thin" Template="{StaticResource DefaultButtons}" Click="JoinDiscordServer_Click" Margin="208,462,561,0" Height="30" VerticalAlignment="Top" />
                        <Image x:Name="ProfilePictureImage" Source="/Resources/Avatar.png" RenderOptions.BitmapScalingMode="HighQuality" Width="120" Height="120" Stretch="Uniform" Margin="88,210,631,277" />
                        <TextBlock x:Name="DiscordUsernameTextBlock" Text="Your username" FontSize="18" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="208,222,317,355"/>

                    </Grid>

                </Grid>

            </TabItem>

            <TabItem x:Name="CleanTabItem" Foreground="AliceBlue" Height="44" Width="44" Margin="-15.5,268,15.5,-268">

                <TabItem.Header>
                    <Image x:Name="CleanTab" Source="/Resources/CleanGray.png" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5" Height="35" Width="35"/>
                </TabItem.Header>

                <Grid Margin="63,0,-2,0" Height="607">

                    <TextBlock x:Name="CleanTextBlock" Text="PC Cleaner" FontSize="50" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="275,35,151,502"/>

                    <Grid 
                        Height="607"
                        Visibility="Visible"
                        x:Name="CleanMenu" 
                        Opacity="1.0">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CleanMenu"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>

                        <Border x:Name="DiskCleanerBackground" Background="#f6f8fa" CornerRadius="20" Margin="80,158,419,279">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="RegistryCleanerBackground" Background="#f6f8fa" CornerRadius="20" Margin="451,158,48,279">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="TracksEraserBackground" Background="#f6f8fa" CornerRadius="20" Margin="80,350,419,87">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
