<Window x:Class="StarZUtilities.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarZUtilities.Classes"
        xmlns:classes="clr-namespace:StarZUtilities.Classes"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Title="StarZ Utilities" 
        Height="564" 
        Width="904">

    <Grid>

        <Border x:Name="MenuMainBackground" Background="{StaticResource LightMode1}" Opacity="1" CornerRadius="20" Width="904" Height="564"/>
        <Border x:Name="SideBarBackground" Background="{StaticResource LightMode2}" Opacity="0.7" CornerRadius="15" Width="55" HorizontalAlignment="Left" Margin="25,138,0,25"/>
        <Border x:Name="TopBarBackground" Background="{StaticResource LightMode2}" Opacity="0.7" BorderThickness="0" CornerRadius="15" Margin="25,25,630,448"/>
        <Border x:Name="TopBarBackground2" Background="{StaticResource LightMode2}" Opacity="0.7" BorderThickness="0" CornerRadius="15" Margin="313,25,25,448"/>
        <Border x:Name="MainBackground" Background="{StaticResource LightMode2}" Opacity="0.7" CornerRadius="15" Width="757" HorizontalAlignment="Left" Margin="122,138,0,25"/>
        <Border x:Name="LogoBackground" Background="{StaticResource LightMode2}" CornerRadius="15" Width="80" Height="80" Margin="32,30,792,454"/>

        <Image 
            x:Name="CloseButton" 
            Panel.ZIndex="3" 
            HorizontalAlignment="Left" 
            Opacity="0.8" 
            Height="34" 
            Margin="825,53,0,0" 
            VerticalAlignment="Top" 
            RenderOptions.BitmapScalingMode="HighQuality" 
            Width="34" Source="/Resources/CloseGray.png" 
            Cursor="Hand" 
            MouseLeftButtonDown="CloseButton_Click" 
            RenderTransformOrigin="0.5, 0.5">
            <Image.RenderTransform>
                <ScaleTransform 
                    x:Name="ImageTransform8" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger 
                    RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetName="ImageTransform8" 
                                Storyboard.TargetProperty="ScaleX" 
                                To="1.05" 
                                Duration="0:0:0.2"/>
                            <DoubleAnimation 
                                Storyboard.TargetName="ImageTransform8" 
                                Storyboard.TargetProperty="ScaleY" 
                                To="1.05" 
                                Duration="0:0:0.2"/>
                            <DoubleAnimation 
                                Storyboard.TargetName="CloseButton" 
                                Storyboard.TargetProperty="Opacity" 
                                To="1" 
                                Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger 
                    RoutedEvent="Image.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation 
                                Storyboard.TargetName="ImageTransform8" 
                                Storyboard.TargetProperty="ScaleX" 
                                To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation 
                                Storyboard.TargetName="ImageTransform8" 
                                Storyboard.TargetProperty="ScaleY" 
                                To="1" Duration="0:0:0.2"/>
                            <DoubleAnimation 
                                Storyboard.TargetName="CloseButton" 
                                Storyboard.TargetProperty="Opacity" 
                                To="0.8" 
                                Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>

        <Image
            x:Name="MinimizeButton"
            Panel.ZIndex="3"
            HorizontalAlignment="Left"
            Opacity="0.8"
            Height="34"
            Margin="786,53,0,0"
            VerticalAlignment="Top"
            RenderOptions.BitmapScalingMode="HighQuality"
            Width="40"
            Source="/Resources/MinimizeGray.png"
            Cursor="Hand"
            MouseLeftButtonDown="MinimizeButton_Click"
            RenderTransformOrigin="0.5, 0.5">
            <Image.RenderTransform>
                <ScaleTransform 
                    x:Name="ImageTransform4" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger 
                    RoutedEvent="Image.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="ImageTransform4"
                                Storyboard.TargetProperty="ScaleX"
                                To="1.05"
                                Duration="0:0:0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetName="ImageTransform4"
                                Storyboard.TargetProperty="ScaleY"
                                To="1.05"
                                Duration="0:0:0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetName="MinimizeButton"
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger 
                    RoutedEvent="Image.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="ImageTransform4"
                                Storyboard.TargetProperty="ScaleX"
                                To="1"
                                Duration="0:0:0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetName="ImageTransform4"
                                Storyboard.TargetProperty="ScaleY"
                                To="1"
                                Duration="0:0:0.2"/>
                            <DoubleAnimation
                                Storyboard.TargetName="MinimizeButton"
                                Storyboard.TargetProperty="Opacity"
                                To="0.8"
                                Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>

        <Image x:Name="StarZLogo" Source="/Resources/StarZLogoDark.png" RenderOptions.BitmapScalingMode="HighQuality" Width="50" Height="50"  HorizontalAlignment="Left" Margin="47,46,0,468"/>
        <TextBlock x:Name="StarZText" Text="StarZ" FontSize="30" FontFamily="Outfit Thin" FontWeight="Bold" Margin="122,38,702,494">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF0044EA"/>
                    <GradientStop Color="#FF00C7ED" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock x:Name="VersionText" Text="Utilities BETA" FontSize="20" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="122,71,661,472"/>

        <TabControl x:Name="SideBarTabControl" BorderThickness="0" Background="Transparent" Height="656" Width="904" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionChanged="SideBarTabControl_SelectionChanged">

            <TabControl.Resources>
                <!-- Tab Control Style -->
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border Name="Border" Cursor="Hand" Background="Transparent" Width="44" Height="44" CornerRadius="10,10,10,10">
                                    <ContentPresenter x:Name="ContentSite" Width="44" Height="44" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" RecognizesAccessKey="True" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#55AAFF" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsMouseOver" Value="True" />
                                            <Condition Property="IsSelected" Value="False" />
                                        </MultiTrigger.Conditions>
                                        <Setter TargetName="Border" Property="Background" Value="#33111111" />
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

