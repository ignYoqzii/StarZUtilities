                        <Border x:Name="SomethingBackground" Background="#f6f8fa" CornerRadius="20" Margin="451,350,48,87">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>

                        <TextBlock x:Name="RegistryCleanerTextBlock" Text="Registry Cleaner" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,170,131,393"/>
                        <TextBlock x:Name="DiskCleanerTextBlock" Text="Disk Cleaner" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,170,543,393"/>
                        <TextBlock x:Name="TracksEraserTextBlock" Text="Tracks Eraser" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,365,543,198"/>
                        <TextBlock x:Name="SomethingTextBlock" Text="Coming Soon"  TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,365,186,198"/>

                        <Button Content="Temporary Files" Cursor="Hand" Foreground="White" FontWeight="Medium" FontFamily="Outfit Thin" Template="{StaticResource DefaultButtons}" Click="TemporaryFiles_Click" Margin="100,274,638,0" Height="30" VerticalAlignment="Top" >
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Button.Effect>
                        </Button>

                        <Button Content="Cleanup Utility" Cursor="Hand" Foreground="White" FontWeight="Medium" FontFamily="Outfit Thin" Template="{StaticResource DefaultButtons}" Click="CleanupUtility_Click" Margin="100,228,638,0" Height="30" VerticalAlignment="Top" >
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Button.Effect>
                        </Button>

                    </Grid>

                </Grid>

            </TabItem>

            <TabItem x:Name="AboutTabItem" Foreground="AliceBlue" Height="44" Width="44" Margin="-59.5,336,59.5,-336">

                <TabItem.Header>
                    <Image x:Name="AboutTab" Source="/Resources/InfoGray.png" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5" Height="40" Width="40"/>
                </TabItem.Header>

                <Grid Margin="63,0,-2,0" Height="607">

                    <TextBlock x:Name="AboutTextBlock" Text="About" FontSize="50" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="275,35,419,504"/>

                    <Grid 
                        Height="607"
                        Visibility="Visible"
                        x:Name="AboutMenu" 
                        Opacity="1.0">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="AboutMenu"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>

                        <Border x:Name="AboutCPUBackground" Background="#f6f8fa" CornerRadius="20" Margin="80,158,419,279">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="AboutGPUBackground" Background="#f6f8fa" CornerRadius="20" Margin="451,158,48,279">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="AboutFanBackground" Background="#f6f8fa" CornerRadius="20" Margin="80,350,419,87">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>
                        <Border x:Name="AboutOthersBackground" Background="#f6f8fa" CornerRadius="20" Margin="451,350,48,87">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.3" RenderingBias="Performance" ShadowDepth="5"/>
                            </Border.Effect>
                        </Border>

                        <TextBlock x:Name="CPUTempTextBlock" Text="Temperature: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,249,436,338"/>
                        <TextBlock x:Name="GPUTempTextBlock" Text="Temperature: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,249,65,338"/>
                        <TextBlock x:Name="CPUNameTextBlock" Text="CPU Name: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,214,436,373"/>
                        <TextBlock x:Name="GPUNameTextBlock" Text="GPU Name: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,214,65,373"/>
                        <TextBlock x:Name="CPULoadTextBlock" Text="Load: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,284,436,303"/>
                        <TextBlock x:Name="GPULoadTextBlock" Text="Load: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,284,65,303"/>
                        <TextBlock x:Name="GPUTextBlock" Text="GPU" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,170,305,393"/>
                        <TextBlock x:Name="CPUTextBlock" Text="CPU" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,170,677,393"/>
                        <TextBlock x:Name="FansTextBlock" Text="Fans Speed" TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,365,577,198"/>
                        <TextBlock x:Name="OthersTextBlock" Text="Other Informations"  TextAlignment="Left" FontSize="30" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,365,106,198"/>
                        <TextBlock x:Name="CPUFanTextBlock" Text="CPU Fan: N/A RPM" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,425,436,162"/>
                        <TextBlock x:Name="GPUFanTextBlock" Text="GPU Fan: N/A RPM" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="100,473,436,114"/>
                        <TextBlock x:Name="MemoryTextBlock" Text="Memory: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,409,67,178"/>
                        <TextBlock x:Name="IPAddressTextBlock" Text="IP Address: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,478,67,109"/>
                        <TextBlock x:Name="MotherboardTextBlock" Text="Motherboard: N/A" TextAlignment="Left" FontSize="15" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="469,444,67,143"/>

                    </Grid>

                </Grid>

            </TabItem>

            <TabItem x:Name="MusicPlayerTabItem" Foreground="AliceBlue" Height="44" Width="44" Margin="-103.5,400,103.5,-400">

                <TabItem.Header>
                    <Image x:Name="MusicPlayerTab" Source="/Resources/MusicPlayerGray.png" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5" Height="30" Width="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </TabItem.Header>

                <Grid Margin="63,0,-2,0" Height="607">

                    <TextBlock x:Name="MusicPlayerTextBlock" Text="Music Player" FontSize="50" FontFamily="Outfit Thin" FontWeight="Medium" Foreground="{StaticResource LightTextColor1}" Margin="275,35,278,514"/>

                    <Grid 
                        Height="607"
                        Visibility="Visible"
                        x:Name="MusicPlayerMenu" 
                        Opacity="0.7">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="MusicPlayerMenu"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>

